{
  // This config is ONLY for type-checking actual source code in packages
  // It is NOT used for any typescript files not in src/

  "extends": "@tsconfig/recommended",

  "compilerOptions": {
    "target": "ES2020",
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "moduleSuffixes": [".ts", ".tsx", ""],
    "lib": ["ES2020"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "allowImportingTsExtensions": true,
    "noEmit": true,
    // "baseUrl": ".",
    // "paths": {
    //   "use-structural-id": ["packages/useStructuralId/src/useStructuralId.ts"] // ðŸ‘ˆ This is the dev-time override
    // }
  },

  "include": [
    "jest.config.ts",
    "packages/*/src"
  ],

  "exclude": [
    "node_modules",
    "build",
    "packages/*/build",
  ],
}
