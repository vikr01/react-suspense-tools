{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "./tsconfig.source.json",
    "./tsup.base.ts",
    "./packages/*/tsup.config.ts",
    "./packages/*/src/**/*"
  ],
  "cacheDir": ".turbo/cache",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "build"
      ],
      "cache": true
    },
    "start": {
      "dependsOn": [
        "^build"
      ],
      "cache": true,
      "persistent": true
    }
  }
}
